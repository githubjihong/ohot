<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<title>oHot Live Studio</title>
<link rel="styleSheet" href="/css/media-live/media-live.css">
<link rel="styleSheet" href="/css/media-live/media-live-detail.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css">

<!--axios js는 헤더에 -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<!-- 번역 js -->
<script src="/js/translate/translate.js"></script>
<!-- liveKit -->
<script src="https://unpkg.com/livekit-client/dist/livekit-client.umd.js"></script>
</head>
<body>
<!-- header.jsp 시작 -->
<%@ include file="../header.jsp" %>
<!-- 커뮤니티페이지 네비, 탭-->
<div class="border border-danger">
<header class="d-flex justify-content-center py-1">
<ul class="nav nav-pills nav-fill gap-c1">
  <li class="nav-item">
    <a class="nav-link" href="${pageContext.request.contextPath}/oho/community/fanBoardList?artGroupNo=${param.artGroupNo}">Fan</a>
  </li>
   <li class="nav-item">
    <a class="nav-link" href="${pageContext.request.contextPath}/oho/community/artistBoardList?artGroupNo=${param.artGroupNo}">Artist</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="${pageContext.request.contextPath}/oho/community/media?artGroupNo=${param.artGroupNo}">Media</a>
  </li>
   <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="${pageContext.request.contextPath}/oho/community/live?artGroupNo=${param.artGroupNo}">Live</a>
  </li>
    <li class="nav-item">
    <a class="nav-link" href="#">Shop</a>
  </li>
</ul>
</header>
</div>
<!--네비탭 끝 -->
<!-- 본문 영역  -->
<!-- 넘어오는 객체들 -->
<sec:authorize access="isAuthenticated()">
	<sec:authentication property="principal.usersVO" var="usersVO" />
</sec:authorize>
<!-- SELECT  U.USER_NO, U.USER_MAIL, USER_PSWD, A.AUTH_NM -->
<!-- ${usersVO} -->
<!-- 본문 영역 -->

<div class="media-container container-fruid px-6" style="height:1000px;">
 <div class="row py-4" style="height:100%;">
   <div class="col col-9">
   	 <div class="row align-items-center" style="background-color: fuchsia; height: 5%;">
      <div class="col-md-3 d-flex justify-content-start">
        
          <i class="bi bi-circle-fill" style="color: red !important;"><span style="color: white;"> 방송 ON AIR</span></i> 
       
          <i class="bi bi-circle"> <span style="color: white;"> 방송 OFF</span></i>
      
      </div>
      <div class="col-md-3 ms-auto d-flex justify-content-end">
        <button class="btn btn-danger">방송 시작</button>
      </div>
   	 </div>
   	 <div class="row" style="background-color: gray; height: 60%;">
      <video src="" style="height: 100%; width: 100%;"></video>
   	 </div>
   	 <div class="row" style="height: 35%;">
   	 	<div class="col-7 mt-3" style="padding-left: 0px;">
        <div class="col-12 px-1">
          <label for="streamTilteInput" class="form-label fs-4 fw-medium" style="color: white;">방송 제목</label>
          <input type="text" class="form-control" placeholder="방송 제목을 입력해주세요.">
        </div>
        <div id="streamContent" class="row mt-2 px-3">
          <label for="StreamContentInput" class="form-label col-12 fs-4 fw-medium" style="color: white; padding-left: 0px;">방송 설명</label>
          <textarea name="StreamContentInput" id="StreamContentInput" placeholder="방송 설명을 입력해주세요" class="form-control" rows="5" style="resize: none;"></textarea>
        </div>
   	 	</div>
   	 	<div class="col-5 mt-3">
   	 		<div class="row" style="height: 100%;">
          <div class="col-12 settings-section">
            <div class="row">
            <h5 class="mb-3" style="color: white;">방송 설정</h5>
            <div class="mb-3 col-6">
              <label for="cameraSelect" class="form-label" style="color: white;">카메라</label>
              <select class="form-select" id="cameraSelect"></select>
            </div>
            <div class="mb-3 col-6">
              <label for="microphoneSelect" class="form-label" style="color: white;">마이크</label>
              <select class="form-select" id="microphoneSelect"></select>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col-6">
              <label for="resolutionSelect" class="form-label" style="color: white;">해상도</label>
              <select class="form-select" id="resolutionSelect">
                <option value="480p">SD (480p)</option>
                <option value="720p">HD (720p)</option>
                <option value="1080p">Full HD (1080p)</option>
              </select>
            </div>
            <button type="button" class="btn btn-primary col-6" id="settingsBtn" style="height: 40px; margin-left: 10px; margin-top: 30px; width: 257px;">설정 저장</button>
          </div>
        </div>
          <div class="fs-4 fw-medium" style="height: 5%;">방송 통계</div>
          <div class="col-12" style="min-height: 30%; background-color: burlywood;">방송통계영역
            
          </div>
        </div>
   	 	</div>
   	 </div>
   </div>
   <div class="comment-container col col-3 flex">
    <!-- 채팅 헤더 영역 -->
    <div class="comment-header row row-1 fw-bold" style="padding-left: 10px;">
    채팅창
    </div>
    
    <!-- 채팅 본문 영역 -->
    <div id="comment-body" class="comment-body row row-md-10">
        
    </div>
    
    <!-- 채팅 입력 영역 -->
    <div class="comment-footer row-md-1 d-flex">
        <input id="inputReply" type="text" class="form-control comment-input" placeholder="채팅을 입력하세요.">
        <button id="inputReplyBtn" class="btn text-white ms-1" style="padding: 0%;">
            <i class="bi bi-arrow-up-circle" style="font-size: x-large;"></i>
        </button>
    </div>
    </div>
  </div>
</div>
<!-- 본문 영역 끝 -->
<!-- Scroll Top -->
	<a href="#" id="scroll-top"
		class="scroll-top d-flex align-items-center justify-content-center active">
		<i class="bi bi-arrow-up-short"></i>
	</a>
	

<!-- data 속성으로 js와 el표현식 분리하는 방법 -->
<!-- 간단한 식별에 사용되는 파라미터 정도 넘길때만 사용 -->
<div id="app-data"
	data-media-post-no = ${mediaPostVO.mediaPostNo}
	data-mem-no = ${communityProfileVO.memNo}
	data-com-nm = "${communityProfileVO.comNm}"
	data-com-profile-save-locate = "${communityProfileVO.fileGroupVO.fileDetailVOList[0].fileSaveLocate}"
  data-art-group-no = ${mediaPostVO.artGroupNo}
  data-com-prifile-no = ${communityProfileVO.comProfileNo}
  data-com-auth = ${communityProfileVO.comAuth}
>
</div> 


<script src="/main/assets/js/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.js"></script>

<%@ include file="../footer.jsp" %>
<script type="text/javascript">

</script>
</body>
</html>