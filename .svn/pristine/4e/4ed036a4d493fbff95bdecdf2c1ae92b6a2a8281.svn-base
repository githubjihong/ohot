<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css" />
  <link>
  <title>Insert title here</title>
</head>

<style>
.card {
	border: none !important; /* 테두리 제거 */
	border-radius: 8px; /* 둥근 모서리 */
	background-color: #f9f9f9; /* 기본 배경색 */
	margin: 1rem; /* 모든 방향에 16px 여백 (m-3) */
	width: 100px; /* 너비 100px */
}

/* main img css */
.product-image {
	height: 535px;
	width: 750px;
}

/* cartBtn, BuyBtn css */
.btnCart, .btnBuy {
	font-size: 20px; /* 글자 크기를 20px로 설정 */
	font-weight: bold; /* 글자를 굵게 설정 */
	padding: 8px 25px; /* 상하 8px, 좌우 25px의 패딩 설정 */
	margin: 0 0 0 5px; /* 위, 오른쪽, 아래, 왼쪽에 각각 0, 0, 0, 5px의 여백 설정 */
	border-radius: 15px; /* 모서리를 15px 만큼 둥글게 설정 */
	width: 200px; /* 너비를 200px로 설정 */
}

.btnCart {
	border: 2px solid #a0a0a0; /* 테두리 두께 2px, 색상은 #a0a0a0 (회색)으로 설정 */
	background-color: white; /* 배경색을 흰색으로 설정 */
	color: #F86D72; /* 글자 색상을 #F86D72 (오렌지-핑크 색상)으로 설정 */
}

.btnBuy {
	background-color: #F86D72; /* 배경색을 #F86D72 (오렌지-핑크 색상)으로 설정 */
	color: white; /* 글자 색상을 흰색으로 설정 */
	border: none; /* 테두리를 제거 */
}

.active {
	border: 2px solid yellow; /* 테두리 두께 2px, 색상은 #a0a0a0 (회색)으로 설정 */
}

</style>

<body>
  <%@ include file="../shopHeader.jsp" %>
  <!-- Default box -->
  <div class="d-flex justify-content-center m-3">
    <div class="card col-8">
      <div class="card-body">
        <div class="row">
          <!-- image 영역 -->
          <div class="col-12 col-sm-6">
            <div class="col-12">
              <img src="/upload${goodsVO.fileGroupVO.fileDetailVOList[0].fileSaveLocate}" class="product-image" alt="Product Image">
            </div>
            <div class="col-12 product-image-thumbs">
				<c:forEach var="i" begin="0" end="${goodsVO.fileGroupVO.fileDetailVOList.size()-1}" step="1">
		            <div class="product-image-thumb">
		              <img src="/upload${goodsVO.fileGroupVO.fileDetailVOList[i].fileSaveLocate}" alt="Product Image">
		            </div>
            	</c:forEach>
            </div>
          </div>
          <!-- Right 영역 -->
          <div class="col-12 col-sm-6">
            <!-- Artist Group 영역 -->
            <h3 class="my-3">${goodsVO.artGroupNm}</h3>
            <p>${goodsVO.gdsNm}</p>
            <p>₩<fmt:formatNumber value="${goodsVO.unitPrice}" pattern="#,###" /></p>
            <div class="container mt-3">
              <div class="border p-3 rounded">
                <span class="fw-bold">수량</span>
                <div class="d-flex align-items-center justify-content-between mt-2">
                  <div class="input-group" style="width: 120px;">
                    <button class="btn btn-outline-dark border-secondary disabled" type="button" onclick="changeQty(-1)" id="subBtn">-</button>
                    <input type="text" class="form-control text-center border-secondary" id="quantity" value="1">
                    <button class="btn btn-outline-dark border-secondary" type="button" onclick="changeQty(1)" id="addBtn">+</button>
                  </div>
                  <span class="fw-bold text-dark" id="totalPrice"></span>
                </div>
              </div>
            </div>
            <!-- Size 영역 -->
            <h4 class="mt-3">Size</h4>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-default text-center">
                <input type="radio" name="color_option" id="color_option_b1" autocomplete="off">
                <span class="text-xl">S</span>
                <br>
                Small
              </label>
            </div>
            
            <!-- Button 영역 -->
            <div class="mt-4">
              <div>
                <button class="btnCart">장바구니 추가</button>
                <button class="btnBuy">구매하기</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%@ include file="../footer.jsp" %>
  
</body>
<!-- JQuery -->
<script>
$(function(){
	
	//상품 값 계산하기
	let unitPrice = ${goodsVO.unitPrice};
	$("#totalPrice").text("₩" + unitPrice.toLocaleString());
	
	// 상품 썸네일 이미지를 클릭했을 때 발생하는 이벤트
	$('.product-image-thumb').on('click', function(){
	    // 클릭된 썸네일 이미지 요소
	    let $thumbnailImage = $(this).find('img');

	    // 썸네일 이미지의 src 경로 가져오기
	    let thumbnailSrc = $thumbnailImage.attr('src');

	    // 대표 이미지의 src를 클릭한 썸네일 이미지의 src로 변경
	    $('.product-image').prop('src', thumbnailSrc);
	    
	    // 이미 활성화된 썸네일에서 active 클래스 제거
	    $('.product-image-thumb.active').removeClass('active');

	    // 클릭된 썸네일에 active 클래스 추가
	    $(this).addClass('active');
	});
})

//qty값이 변경되었을 때 실행되는 함수
const changeQty = (qty) => {
	// 현재 수량 가져오기
	let currentQuantity = parseInt($("#quantity").val());

	// 버튼 클릭에 따라 수량 변경
	currentQuantity += qty;

	// 변경된 수량을 input 필드에 반영
	$("#quantity").val(currentQuantity);

	// 수량이 1일 경우 - 감소 버튼 비활성화
	if (currentQuantity === 1) {
	    $("#subBtn").addClass("disabled");
	} else {
	    $("#subBtn").removeClass("disabled");
	}
	
	// 가격 계산하기
	let totalPrice = currentQuantity * ${goodsVO.unitPrice};

	// 가격을 세자리마다 쉼표 추가하여 포맷팅
	totalPrice = totalPrice.toLocaleString();

	// 가격을 화면에 반영
	$("#totalPrice").text("₩" + totalPrice);
}
</script> 

</html>
