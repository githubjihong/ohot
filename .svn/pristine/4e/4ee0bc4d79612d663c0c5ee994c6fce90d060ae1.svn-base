<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>

<style>
html, body {
  height: 88%;  /* html과 body의 높이를 100%로 설정 */
}

/* 섹션 스타일 */
.page-background {
  height: 100%;
  justify-content: center; /* 세로 중앙 정렬 */
  box-sizing: border-box; /* 패딩을 포함한 크기 계산 */
  background-color: #f9f9f9; /* 기본 배경색 */
}

/* 카드 스타일: 기본 카드에 대한 스타일 */
.card-container {
  border: none !important; /* 테두리 제거 */
  border-radius: 16px !important; /* 둥근 모서리 변경 시 .collapsed-accordion-btn 값도 변경할 것. */
  background-color: #FFF; /* 기본 배경색 */
  margin: 1rem; /* 모든 방향에 1rem 마진 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 그림자 효과 */
}

/* 카드 제목 스타일 */
.card-title-container {
  font-size: 1.25rem;  /* 기본 카드 제목 크기 */
  font-weight: bold;   /* 두꺼운 글씨 */
  margin-bottom: 0 !important;     /* 하단 마진 0px 설정 */
}

.card-header-container {
  background-color: #FFF !important; /* 기본 배경색 */
  border: none !important;
  font-weight: bold !important;
}

.card-body-container {
  padding: 0 0 0 0 !important;
}

/* accordion-boutton.collapsed */
.collapsed-accordion-btn  {
  border-radius: 16px !important; /* 둥근 모서리 */
  background-color: #FFF !important;
}

/* 아코디언 버튼 collapsed 상태에서의 스타일 */
.accordion-button.collapsed {
  background-color: #FFF; /* collapsed 상태에서의 배경색 */
  padding-right: 50px;
}

/* 아코디언 버튼 클릭 시 발생하는 파란색 선 제거 */
.accordion-button:focus {
  outline: none !important;  /* 포커스 시 나타나는 외곽선 제거 */
  box-shadow: none !important;  /* 클릭 시 나타나는 그림자 제거 */
  padding-right: 50px;
}

/* 텍스트 오른쪽에만 패딩을 적용하는 스타일 */
.card-title-left {
  padding-right: 15px;             /* 오른쪽 패딩 15px */
  margin-bottom: 0 !important;     /* 하단 마진 0px 설정 */
  font-size: 14px; /* 텍스트 크기 설정 (원하는 크기로 조정) */
}

.header-title {
  font-size: 2.0rem;  /* 기본 카드 제목 크기 */
  font-weight: bold;   /* 두꺼운 글씨 */
  margin-bottom: 0px;
}
</style>

<body>
	<%@ include file="../shopHeader.jsp" %>
	
	<section class="page-background">
	  <!-- Form 영역 -->
	  <form action="" class="container">
	    <h1 class="header-title">주문서</h1>
	      <div class="row">
	    	<!-- 왼쪽 영역 -->
	          <div class="col-12 col-sm-9" style="padding-left: 0px; padding-right: 0px;">
	            <div class="card card-container">
	              <div class="card-body card-body-container">
	                <div class="accordion accordion-flush" id="accordionFlushExample">
					    <!-- accrdion-button -->
					    <button class="accordion-button collapsed collapsed-accordion-btn" type="button" 
					    	data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
					      <div class="col-2 text-start">
					        <h5 class="card-title card-title-container">주문 상품</h5>
					      </div>
					      <div class="col-10 text-end">
					        <h5 class="card-title card-title-left">[HELLOMONSTERS] BABYMONSTER SWEAT 2-WAY PANTS_SKY BLUE</h5>
					      </div>
				        </button>
				      	<!-- accrdion button click 시 보이는 화면 -->
				      	<div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
				      	  <div class="accordion-body">Test</div>
				    	</div>
	          		  </div>
	              </div>
	            </div>
	            
	            <!-- 주문자 -->
	            <div class="card card-container">
	              <div class="card-body card-body-container">
	                <div class="accordion accordion-flush" id="accordionFlushExample">
					    <!-- accrdion-button -->
					    <button class="accordion-button collapsed collapsed-accordion-btn" type="button" 
					    	data-bs-toggle="collapse" data-bs-target="#flush-collapseOne1" aria-expanded="false" aria-controls="flush-collapseOne1">
					      <div class="col-2 text-start">
					        <h5 class="card-title card-title-container">주문자</h5>
					      </div>
					      <div class="col-10 text-end">
					        <h5 class="card-title card-title-left">[HELLOMONSTERS] BABYMONSTER SWEAT 2-WAY PANTS_SKY BLUE</h5>
					      </div>
				        </button>
				      	<!-- accrdion button click 시 보이는 화면 -->
				      	<div id="flush-collapseOne1" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
				      	  <div class="accordion-body">Test</div>
				    	</div>
	          		  </div>
	              </div>
	            </div>
	          </div>
	          
	          <!-- 오른쪽 영역 -->
	          <div class="col-12 col-sm-3">
				<div class="card card-container">
	              <div class="card-header card-header-container">결제 금액</div>
	                <div class="card-body">
	                  <p>상품 금액: <strong>₩170,000</strong></p>
	                  <hr>
	                  <p class="fw-bold">총 결제 금액: ₩170,000</p>
	                  <button class="btn btn-primary w-100">동의 후 ₩170,000 결제</button>
	                  <small class="text-muted d-block mt-2">이용약관을 확인했으며, 개인정보 수집 이용 및 제공에 동의합니다.</small>
	                </div>
	            </div>
	          </div>
	      </div>	
	  </form>
	</section>
	  	
	<%@ include file="../shopfooter.jsp" %>
</body>
</html>