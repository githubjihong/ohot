<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>

<script
	src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script
	src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.15/jstree.min.js"></script>
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.15/themes/default/style.min.css" />
<script
	src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.8.4/axios.min.js"></script>

<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
	rel="stylesheet">
<link rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
</style>
</head>
<body>


	<!-- 사이드바 -->
	<%@ include file="../sidebar.jsp"%>

	<!-- 컨텐츠 -->
	<main
		class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
		<!-- 헤더 -->
		<%@ include file="../header.jsp"%>
		<div class="container-fluid py-2">
			여기서 작성

			<div class="container mt-4">
				<!-- 문서 선택 셀렉트 -->
				<div class="mb-3">
					<div class="row g-2">
						<div class="col-md-3">
							<select class="form-select">
								<option selected>문서 선택</option>
								<option>휴가 신청서</option>
								<option>지출 결의서</option>
							</select>
						</div>
						<div class="col-md-2 d-flex align-items-center">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="urgentDoc">
								<label class="form-check-label" for="urgentDoc">긴급 문서</label>
							</div>
						</div>
						<div class="col-md-7">
							<input type="text" class="form-control"
								placeholder="결재 제목을 입력해주세요. (50자 미만)">
						</div>
					</div>
				</div>

				<!-- 문서작성 & 결재선 -->
				<div class="row align-items-stretch">
					<!-- 왼쪽: 기안문서 -->
					<div class="col-md-8 mb-4">
						<div class="card shadow-sm">
							<div class="card-header">기안 문서 작성</div>
							<div class="card-body">
								<form action="${pageContext.request.contextPath}/approval/draft"
									method="post" enctype="multipart/form-data">
									<div class="mb-3">
										<label for="title" class="form-label">제목</label> <input
											type="text" class="form-control" id="title" name="title"
											required>
									</div>

									<div class="mb-3">
										<label for="receiver" class="form-label">결재자 선택</label> <select
											class="form-select" id="receiver" name="receiverEmpNo"
											required>
											<option value="">-- 결재자 선택 --</option>
											<c:forEach var="emp" items="${employeeList}">
												<option value="${emp.empNo}">${emp.empName}
													(${emp.position})</option>
											</c:forEach>
										</select>
									</div>

									<div class="mb-3">
										<label for="content" class="form-label">본문</label>
										<textarea class="form-control" id="content" name="content"
											rows="10" required></textarea>
									</div>

									<div class="mb-3">
										<label for="file" class="form-label">파일 첨부</label> <input
											class="form-control" type="file" id="file" name="file" />
									</div>

									<button type="submit" class="btn btn-primary">기안 제출</button>
								</form>
							</div>
						</div>
					</div>

					<!-- 오른쪽: 결재선 -->
					<div class="col-md-4 mb-4">
						<div class="card shadow-sm h-100">
							<div
								class="card-header d-flex justify-content-between align-items-center">
								<span>결재선</span>
							</div>
							<div class="card-body">
								<div class="d-flex align-items-center mb-3">
									<img src="https://via.placeholder.com/40"
										class="rounded-circle me-2" alt="결재자 이미지">
									<div>
										<div class="fw-bold">신승호 사원</div>
										<div class="text-muted" style="font-size: 0.9em;">인사부서 /
											기안선</div>
									</div>
								</div>
								<button class="btn btn-outline-secondary" data-bs-toggle="modal"
									data-bs-target="#approvalModal" id="approvalBtn"
									onclick="approvalLine()">결재선 설정</button>
								<button class="btn btn-info">결재 요청</button>
							</div>
						</div>
					</div>
				</div>
			</div>


			<!-- 모달 -->
			<div class="modal fade" id="approvalModal" tabindex="-1"
				aria-labelledby="approvalModalLabel" aria-hidden="false">
				<div
					class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
					<div class="modal-content"
						style="height: 550px; border-radius: 12px; padding: 20px; display: flex; flex-direction: column;">

						<!-- 헤더 -->
						<div class="modal-header">
							<h5 class="modal-title" id="approvalModalLabel">결재 정보</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal"
								aria-label="Close"></button>
						</div>

						<!-- 바디 -->
						<div class="modal-body" style="flex: 1; display: flex; gap: 10px;">
							<!-- 좌측: 조직도 -->
							<div
								style="width: 35%; border: 1px solid #ddd; border-radius: 8px; padding: 10px;">
								<input type="text" id="searchName" placeholder="이름"
									class="form-control form-control-sm mb-2" />
								<!-- <button onclick="fSch()"></button> -->
								<div id="jstree" style="max-height: 400px; overflow-y: auto;"></div>
							</div>

							<!-- 중앙: 버튼 -->
							<div
								class="d-flex flex-column justify-content-center align-items-center gap-2">
								<button id="btnAdd" class="btn btn-primary btn-sm">≫</button>
								<button id="btnRemove" class="btn btn-secondary btn-sm">≪</button>
							</div>

							<!-- 우측: 결재선 -->
							<div
								style="width: 60%; border: 1px solid #ddd; border-radius: 8px; padding: 10px;">
								<table class="table table-sm text-center align-middle">
									<thead class="table-light">
										<tr>
											<th>타입</th>
											<th>이름</th>
											<th>직급</th>
											<th>부서</th>
											<th><i class="bi bi-trash3-fill"></i></th>
										</tr>
									</thead>
									<tbody id="approvalList">
										<tr>
											<td class="text-primary fw-bold">기안</td>
											<td>신승호</td>
											<td>사원</td>
											<td>인사부서</td>
											<td>-</td>
										</tr>
										<!-- 결재자 동적 추가 영역 -->
									</tbody>
								</table>
							</div>
						</div>

						<!-- 푸터 -->
						<div class="modal-footer">
							<button type="button" class="btn btn-outline-secondary"
								data-bs-dismiss="modal">취소</button>
							<button type="button" class="btn btn-primary">확인</button>
						</div>

					</div>
				</div>
			</div>


		</div>
		<!-- 풋터 -->
		<%@ include file="../footer.jsp"%>
	</main>
	<script>
		function approvalLine() {
			console.log("열렸다11");
			$('#approvalModal').modal('show');
		}

		$(document).ready(function() {
			// 1. 기본 설정은 여기에
			if ($.jstree && $.jstree.defaults) {
				$.jstree.defaults.core.themes.variant = "large";
			}

			// 2. JSTree 초기화
			$('#jstree').jstree({
				plugins : [ 'search' ],
				core : {
					data : {
						url : '/emp/treeListAjax',
						dataType : 'json'
					},
					check_callback : true
				}
			});

			// 3. JSTree 준비 완료 이벤트
			$('#jstree').on('ready.jstree', function(e, data) {
				console.log("트리 준비 완료!", data.instance.get_json());
			});

			// 4. 검색 함수
			$('#searchName').on('input', function() {
				$('#jstree').jstree(true).search($(this).val());
			});

			// 5. 노드 선택 시 처리
			$('#jstree').on('select_node.jstree', function(e, data) {
				const node = data.node;
				const empInfo = node.data;

				if (empInfo) {
					// 예시: 사원 이메일 정보 출력
					console.log("선택한 사원 정보", empInfo);
				}
			});
		});
	</script>
</body>
</html>