<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<!DOCTYPE html>
<html>
<head>
<title>oHoT Admin</title>
</head>
<body class="sidebar-mini" style="height: auto;">
	<div class="wrapper">
		<!-- 관리자 헤더네비바  -->
		<%@ include file="../adminHeader.jsp"%>

		<!-- 관리자 사이드바 -->
		<%@ include file="../adminSidebar.jsp"%>
		
		${artistVOList }
		<!-- 컨텐츠-->
		<div class="content-wrapper">
			<div class="container">
				<h2 class="mb-4">아티스트 그룹 상세</h2>
				<form action="/admin/artistGroup/artistGroupEditPost" method="post"
					enctype="multipart/form-data" name="editArtistGroupForm">
					<input type="hidden" value="${artistGroupDetail.artGroupNo}"
						name="artGroupNo" /> <input type="hidden"
						value="${artistGroupDetail.fileGroupNo}" name="fileGroupNo" />

					<div class="form-group row">
						<label class="col-sm-2">데뷔일자</label>
						<div class="col-sm-3">
							<input type="text" id="artGroupDebutYmd" name="artGroupDebutYmd"
								class="form-control"
								value="${artistGroupDetail.artGroupDebutYmd }" />
							<code>* ex) 20250317</code>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2">그룹명</label>
						<div class="col-sm-3">
							<input type="text" id="artGroupNm" name="artGroupNm"
								class="form-control" value="${artistGroupDetail.artGroupNm }" />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2">그룹 소개</label>
						<div class="col-sm-3">
							<div id="descriptionTemp"></div>
							<textarea id="artGroupExpln" name="artGroupExpln" rows="3"
								cols="30" class="form-control">${artistGroupDetail.artGroupExpln }</textarea>
						</div>
					</div>

					<div class="form-group row">
						<label class="col-sm-2">그룹 프로필 사진</label>
						<div class="col-sm-5">
							<img
								src="/upload${artistGroupDetail.fileGroupVO.fileDetailVOList[0].fileSaveLocate }"
								alt="" style="width: 400px; height: 400px;" /> <input
								type="file" id="uploadFile" name="uploadFile"
								class="form-control" />
						</div>
					</div>

					<select class="form-select" aria-label="Default select example">
					  <option selected>아티스트 선택</option>
						<c:forEach var="artistVO" items="${artistVOList}" >
					  		<option value="1">${artistVO.artActNm }(${artistVO.memVO.memLastName }${artistVO.memVO.memFirstName })</option>
					  	</c:forEach>
					</select>

					<div class="form-group row">
						<div class="col-12 d-flex justify-content-end">
							<a href="/admin/artist/registerPost"></a> <input type="button"
								class="btn btn-primary mr-2" value="등록" onclick="editArtistGroup()" />
							<a href="/admin/artistGroup/artistGroupList" class="btn btn-info">목록보기</a>
						</div>
					</div>
				</form>
			</div>

		</div>

		<!-- 관리자 풋터 -->
		<%@ include file="../adminFooter.jsp"%>

	</div>
	<script type="text/javascript">
		function editArtistGroup() {
			$("form[name='editArtistGroupForm']").submit();
		}
	</script>
</body>
</html>