<script>
	/* 차트 스크립트 */
	const ctx = document.getElementById('myChart');
	
	$(document).ready(function() {
	
		
		
		$.ajax({
			url: "/admin/stats/listcommunityMemberAjax",
			type: "post",
			dataType: "json",
			success: function(resp) {
				console.log("====================================================1");
				console.log("resp : ", resp);
				getcommunityMember(resp);
			}
		});
	});
	
	function getcommunityMember(listcommunityMemberAjax) {
			
	let labels = [];
	let data = [];
	
	console.log("getmember resp: ", listcommunityMemberAjax);

	$.each(listcommunityMemberAjax, function(idx, stats) {
		labels.push(stats.comJoinYmd);
		console.log("stats.comJoinYmd", stats.comJoinYmd );
		console.log("labels", labels);
		
		data.push(stats.comProfileCnt);
		console.log("stats.comProfileCnt", stats.comProfileCnt);
		console.log("data", data);
	});	
	
	new Chart(ctx, {
		type : 'bar',
		data : {
			labels : labels,
			datasets : [ {
				label : ' of Votes',
				data : data,
				borderWidth : 3
			} ]
		},
		options : {
			scales : {
				y : {
					beginAtZero : true
				}
			}
		}
	});
	
	}
