/* 디엠 목록 시작 */

	/* 버튼 전체 영역 */
	.btn-dmlist {
	  display: inline-flex;                 /* ★ inline으로 float처럼 */
	  align-items: center;
	  background-color: #fff;
	  border: none;
	  border-radius: 30px;
	  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
	  padding: 10px 16px;
	  min-width: 150px;
	  max-width: 200px;                    
	  width: fit-content;          
	  margin: 15px;
	  transition: background-color 0.3s, box-shadow 0.3s;
	}
	
	/* hover 효과 */
	.btn-dmlist:hover {
	  background-color: #f8f9fa;
	  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
	}
	
	/* 로고 */
	.btn-dmlist .logo-wrap {
	  background-color: white;
	  padding: 4px;
	  border-radius: 50%;
	  border: 2px solid white;
	  width: 60px;
	  height: 60px;
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  flex-shrink: 0;
	  margin-right: 12px;
	}
	
	/* 로고 이미지 */
	.btn-dmlist .logo-wrap img {
	  width: 60px;
	  height: 60px;
	  border-radius: 50%;
	}
	
	/* 텍스트 영역 */
	.btn-dmlist .card-body {
	  flex: 1;              /* 남은 공간을 텍스트가 채움 */
	  min-width: 0;         /* overflow 처리 위해 필요할 수 있음 */
	}
	
	.btn-dmlist .card-body h6 {
	  font-weight: 700;
	  font-size: 13px;
	  margin: 0;
	  white-space: nowrap;         /* 줄바꿈 방지 */
	  overflow: hidden;            /* 넘치는 부분 숨김 */
	  text-overflow: ellipsis;     /* 말줄임표 (...) 표시 */
	  max-width: 100%;             /* 부모 영역 기준 */
	  display: block;              /* 필요 시 inline을 block으로 */
	  color: black !important;
	}
	
/* 디엠 목록 끝 */

/* 디엠 새로고침 버튼 시작 */
	.svg-btn {
	  background: none;     /* 배경 제거 */
	  border: none;         /* 테두리 제거 */
	  padding: 0;           /* 내부 여백 제거 */
	  cursor: pointer;      /* 커서 포인터 */
	  outline: none;        /* 클릭 시 외곽선 제거 */
	}
/* 디엠 새로고침 버튼 끝 */


/* 아티스트 그룹 목록 시작*/
	/* 구독한 그룹 백그라운드 */
	.grayBackground{
	  background-color: #F7F7F7; 
	}
	/* 그룹 카드 전체 박스 */
	.card-artist {
	  all: unset; /* ★ 모든 기본 스타일 제거 */
	  display: block;
	  width: 200px;
	  background-color: #fff;
	  border-radius: 12px;
	  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
	  overflow: hidden;
	  position: relative;
	  text-align: center;
	  cursor: pointer;
	  transition: background-color 0.3s, box-shadow 0.3s;
	}

	
	/* 전체 박스에 마우스 올렸을 때 */
	.card-artist:hover {
	  background-color: #f8f9fa; /* 은은한 회색 배경 */
	  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2); /* 조금 더 강조된 그림자 */
	}
	
	/* 상단 이미지 */
	.card-artist .bg-img {
	  width: 100%;
	  height: 160px;
	  object-fit: cover;
	  border-top-left-radius: 12px;
	  border-top-right-radius: 12px;
	}
	
	/* 가운데 겹쳐 있는 원형 로고 */
	.card-artist .logo-wrap {
	  position: absolute;
	  top: 135px;
	  left: 50%;
	  transform: translateX(-50%);
	  background-color: white;
/* 	  padding: 4px; */
	  border-radius: 50%;
/* 	  border: 2px solid white; */
	  width: 48px;
	  height: 48px;
	  display: flex;
	  align-items: center;
	  justify-content: center;
	}
	
	/* 로고 이미지 */
	.card-artist .logo-wrap img {
	  width: 48px;
	  height: 48px;
	  border-radius: 50%;
	}
	
	/* 아티스트명 영역 */
	.card-artist .card-body {
	  padding-top: 28px;
	  padding-bottom: 16px;
	}
	
	.card-artist .card-body h6 {
	  font-weight: 700;
	  font-size: 16px;
	  margin: 0;
	}
/*아티스트 그룹 목록 끝*/

/* 굿즈 아티스트 그룹명 시작 */
	/* 그룹명 카드 전체 박스 */
	.card-artistNm {
	  align-items: center;
	  background-color: #F7F7F7;
	  border: none;
	  border-radius: 30px;
	  padding: 10px 16px;
	  min-width: 70px;
	  max-width: 200px;                    
	  width: fit-content;          
	  margin: 0px;
	}
	
	.card-artistNm.active {
	  background-color: #111; 
	  color: #fff; 
	}
/* 굿즈 아티스트 그룹명 끝 */
