<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>oHoT EMP</title>
</head>
<body class="g-sidenav-show  bg-gray-100">

  
  <!-- 사이드바 -->
  <%@ include file="../sidebar.jsp"%>
  
  <!-- 컨텐츠 -->
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <!-- 헤더 -->
      <%@ include file="../header.jsp"%>
        <div class="container-fluid py-2">
        	<h4 class="fw-bold mb-2">결재 관리</h4>
			  <p class="text-muted mb-4">요청된 결재 문서를 쉽게 찾고 편리하게 관리하세요</p>
			
			  <!-- 상단 요약 카드 -->
			  <div class="row g-3 mb-4">
			    <div class="col-md-3">
			      <div class="bg-white rounded shadow-sm p-3 d-flex justify-content-between align-items-center">
			        <div>
			          <div class="fw-bold text-danger">긴급 결재 요청</div>
			          <div class="fs-5 fw-bold">8건</div>
			        </div>
			        <i class="bi bi-exclamation-triangle text-danger fs-3"></i>
			      </div>
			    </div>
			    <div class="col-md-3">
			      <div class="bg-white rounded shadow-sm p-3 d-flex justify-content-between align-items-center">
			        <div>
			          <div class="fw-bold">일반 결재 요청</div>
			          <div class="fs-5 fw-bold">3건</div>
			        </div>
			        <i class="bi bi-file-earmark-text fs-3 text-primary"></i>
			      </div>
			    </div>
			    <div class="col-md-3">
			      <div class="bg-white rounded shadow-sm p-3 d-flex justify-content-between align-items-center">
			        <div>
			          <div class="fw-bold">결재 대기</div>
			          <div class="fs-5 fw-bold">5건</div>
			        </div>
			        <i class="bi bi-check-circle fs-3 text-success"></i>
			      </div>
			    </div>
			    <div class="col-md-3">
			      <div class="bg-white rounded shadow-sm p-3 d-flex justify-content-between align-items-center">
			        <div>
			          <div class="fw-bold">결재 예정</div>
			          <div class="fs-5 fw-bold">6건</div>
			        </div>
			        <i class="bi bi-clock-history fs-3 text-warning"></i>
			      </div>
			    </div>
			  </div>
			
			  <!-- 필터 영역 -->
			  <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
			    <button class="btn btn-outline-primary active">전체 목록</button>
			    <label class="form-label mb-0">기안 일자</label>
			    <input type="date" class="form-control form-control-sm" style="width: 160px;">
			    <span>~</span>
			    <input type="date" class="form-control form-control-sm" style="width: 160px;">
			    <select class="form-select form-select-sm" style="width: 120px;">
			      <option>제목</option>
			      <option>기안자</option>
			    </select>
			    <input type="text" class="form-control form-control-sm" placeholder="검색어를 입력하세요" style="width: 200px;">
			    <button class="btn btn-sm btn-secondary">검색</button>
			  </div>
			
			  <!-- 결재 리스트 테이블 -->
			  <div class="table-responsive bg-white rounded shadow-sm">
			    <table class="table table-hover align-middle mb-0">
			      <thead class="table-light text-center">
			        <tr>
			          <th>번호</th>
			          <th>기안 일시</th>
			          <th>긴급</th>
			          <th>제목</th>
			          <th>기안자 / 부서 명</th>
			          <th>처리 상태</th>
			        </tr>
			      </thead>
			      <tbody class="text-center">
			        <tr>
			          <td>1</td>
			          <td>2024.10.16(수) 17:34</td>
			          <td><span class="badge bg-danger-subtle text-danger border border-danger">긴급</span></td>
			          <td class="text-start">기안입니다</td>
			          <td>신승호 사원 / 인사부서</td>
			          <td><span class="badge bg-secondary-subtle text-primary border">대기</span></td>
			        </tr>
			        <tr>
			          <td>2</td>
			          <td>2024.10.16(수) 17:33</td>
			          <td><span class="badge bg-danger-subtle text-danger border border-danger">긴급</span></td>
			          <td class="text-start">제목입니다.</td>
			          <td>신승호 사원 / 인사부서</td>
			          <td><span class="badge bg-secondary-subtle text-primary border">대기</span></td>
			        </tr>
			        <!-- 필요한 만큼 반복 -->
			      </tbody>
			    </table>
			  </div>
        </div>


        <!-- 풋터 -->
        <%@ include file="../footer.jsp"%>
    </main>   

</body>
</html>