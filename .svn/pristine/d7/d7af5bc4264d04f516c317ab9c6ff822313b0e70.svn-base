package com.ohot.admin.service.impl;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ohot.admin.mapper.AdminReportMapper;
import com.ohot.admin.service.AdminReportService;
import com.ohot.vo.ReportmanageVO;

import lombok.extern.slf4j.Slf4j;

@Slf4j
@Service
public class AdminReportServiceImpl implements AdminReportService {
	
	@Autowired
	AdminReportMapper adminReportMapper;
	
	//페이지 숫자
	@Override
	public int getTotalReport(Map<String, Object> map) {
		return this.adminReportMapper.getTotalReport(map);
	}
	
	//신고 전송폼
	@Override
	public ReportmanageVO reportmanageVODetail(ReportmanageVO reportmanageVO) {
		return this.adminReportMapper.reportmanageVODetail(reportmanageVO);
	}

	//신고상세페이지
	@Override
	public ReportmanageVO getReportById(ReportmanageVO reportmanageVO) {
		return this.adminReportMapper.getReportById(reportmanageVO);
	}

	//신고글에 대한 관리자의 처리
	@Override
	public int reportUpdate(ReportmanageVO reportmanageVO) {
		return this.adminReportMapper.reportUpdate(reportmanageVO);
	}
	//신고글 삭제
	@Override
	public int reportDelete(int reportPostNo) {
		return this.adminReportMapper.reportDelete(reportPostNo);
	}

	//신고글 리스트
	@Override
	public List<ReportmanageVO> reportList(Map<String, Object> map) {
		return this.adminReportMapper.reportList(map);
	}
	//검색
	@Override
	public List<ReportmanageVO> reportSearchList(Map<String, Object> map) {
		return this.adminReportMapper.reportSearchList(map);
	}

	
	
	
	
	

}
