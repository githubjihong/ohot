<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<!DOCTYPE html>
<html>

<head>
<title>oHoT</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css"
	href="/login/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css"
	href="/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="/login/css/util.css">
<link rel="stylesheet" type="text/css" href="/login/css/main.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
	<!-- header.jsp 시작 -->
	<%@ include file="header.jsp"%>
	
<c:if test="${param.error eq 'true'}">
	<script>
	    Swal.fire({
	        icon: 'error',
	        title: '회원가입에 실패했습니다',
	        text: '다시 시도해 주세요',
	        confirmButtonText: '확인'
	    });
	</script>
</c:if>

<sec:authorize access="isAuthenticated()">
   <sec:authentication property="principal.usersVO" var="userVO"/>
</sec:authorize>
${userVO}
<br>
${userVO.userMail}
<br>
${userVO.userPswd}

	<div class="limiter">
		<div id="formDiv" class="container-login100">
			<div class="wrap-sign100">
				<form class="sign100-form" action="/signupAccess" method="post">
					<c:choose>
						<c:when test="${not empty userVO}">
							<input type="hidden" name="memEmail" value="${userVO.userMail}" />
							<input type="hidden" name="memPswd" value="${userVO.userPswd}" />
						</c:when>
						<c:otherwise>
							<input type="hidden" name="memEmail" value="${memEmail}" />
							<input type="hidden" name="memPswd" value="${memPswd}" />
						</c:otherwise>
					</c:choose>
					<input type="hidden" name="snsMemYn" value="${snsMemYn}" />
					<span class="login100-form-title">
						<img src="/images/oHoT_logo.png" class="logo"
							style="width: 100px; height: 100%"> account
					</span>
					<h2>계정을 설정해 주세요!</h2>
					<span>닉네임은 1~20자 길이로 숫자 특수문자 조합의 공통 닉네임이며, 나중에 계정 설정에서 변경할 수
						있습니다.</span> <br> <br>
					<!-- 이름(성) -->
					<div class="wrap-input100">
						<label for="memLastName">이름 성</label>
						<div class="input-with-btn">
							<input class="input50" type="text" name="memLastName"
								placeholder="홍">
							<div style="width: 90px;"></div>
						</div>
					</div>
					<!-- 이름(이름) -->
					<div class="wrap-input100">
						<label for="memFirstName">이름</label>
						<div class="input-with-btn">
							<input class="input50" type="text" name="memFirstName"
								placeholder="길동">
							<div style="width: 90px;"></div>
						</div>
					</div>

					<!-- 생년월일 -->
					<div class="wrap-input100">
						<label for="memBirth">생년월일 <small style="color: #aaa;">만
								12세 이상만 가입이 가능합니다.</small></label>
						<div class="input-with-btn">
							<input type="date" id="memBirth" name="memBirth" class="input50">
							<div style="width: 90px;"></div>
							<!-- 동일하게 맞추기 -->
						</div>
					</div>

					<!-- 핸드폰번호 -->
					<div class="wrap-input100">
						<label for="memTelno">핸드폰번호</label>
						<div class="input-with-btn">
							<input class="input50" type="text" name="memTelno" id="memTelno" 
									maxlength="13" placeholder="010-0000-0000">
							<button type="button" class="btn-getstarted" id="checkPhoneBtn" onClick="phoneDuplCheck()" style="display: block">중복 검사</button>
						</div>
					</div>

					<!-- 닉네임 -->
					<div class="wrap-input100">
						<label for="nickname">닉네임</label>
						<div class="input-with-btn">
							<input id="memNicknm" class="input50" type="text" name="memNicknm"
								placeholder="닉네임을 입력하세요." maxlength="20">
							<button id="checkNickBtn" type="button" class="btn-getstarted"
										 onClick="nickDuplCheck()" style="visibility: visible">중복 검사</button>
						</div>
					</div>

					<div class="container-login100-form-btn">
						<button id="joinBtn" class="login100-form-btn" style="visibility: hidden">가입 완료!</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<%@ include file="footer.jsp"%>
	<script src="/login/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="/login/vendor/bootstrap/js/popper.js"></script>
	<script src="/login/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="/login/vendor/select2/select2.min.js"></script>
	<script src="/login/vendor/tilt/tilt.jquery.min.js"></script>
	<script src="/login/js/main.js"></script>
	<script src="/login/js/signup.js"></script>
</body>
</html>