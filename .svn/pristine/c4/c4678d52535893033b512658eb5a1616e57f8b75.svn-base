<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<link rel="stylesheet" href="/shop/main.css" />
<title>Insert title here</title>
</head>
<body>
  <!-- wrapper 시작 -->
  <div class="wrapper">
    <%@ include file="../shopHeader.jsp" %>
    
    <!-- ✅ content 시작 -->
    <div class="content">
      <div class="d-flex justify-content-center">
        <div class="col-8">
          <h3 class="mt-5">주문상세</h3>
        </div>
      </div>
        
      <div class="container">
	    <div class="row">
          <div class="card card-container">	
            <!-- card-header -->
          	<div class="card-header card-header-container-cart border-bottom">
	          <div class="d-flex justify-content-between align-items-center">
	            <h5 class="card-title mb-0">2025.02.28 02:35</h5>
		  	  </div>
    	    </div>
            
            <!-- card body --> 
            <div class="card-body card-body-container">
              <div class="accordion accordion-flush" id="orderAccordion">
                <!-- 주문 상품 -->
                <button class="accordion-button collapsed collapsed-accordion-btn" type="button" 
                  data-bs-toggle="collapse" data-bs-target="#orderItemCollapse" aria-expanded="false" aria-controls="orderItemCollapse">
                  
                  <div class="col-2 text-start">
                      <h5 class="card-title card-title-container">주문 상품</h5>
                      <h5 class="card-title card-title-container">주문번호</h5>
                  </div>
                  <div class="col-10 text-end">
                    <h5 class="card-title card-title-right">
                     <!-- 주문상품이 단건일경우 /다 건일경우 처리 -->
                    </h5>
                  </div>
                </button>
                
                <!-- 주문상품 상세 화면 -->	    	
                <div id="orderItemCollapse" class="accordion-collapse collapse" data-bs-parent="#orderAccordion" autofocus>	      
                  <div class="accordion-body">
                    <div class="card card-container-bottom-border p-2">
                      <div class="row g-0">
                      <!-- 왼쪽 이미지 -->
                        <div class="col-2 text-center">
                          <img src="/upload//2025/04/10/b77cce77-14e4-4bec-b572-98d9af03a73f_1a8102314c91576b32458c61e4833d81.jpg" 
                                class="img-fluid rounded" alt="상품 이미지" style="width: 100px; height: 100px;">
                        </div>
                        <div class="col-10">
                          <div class="card-body p-2">
                            <h5 class="card-title mb-1">앨범</h5>
                            <p class="card-text mb-0">수량</p>
                            <p class="card-text mb-0">옵션</p>
                            <span id="amount" name="ddd">₩<50000<fmt:formatNumber value="50000" pattern="#,###" /></span>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- 총합계 영역 -->
                    <div class="d-flex justify-content-between align-items-center mt-3">
                      <span class="fw-bold">총 상품 금액(1111개)</span>
                      <span class="text-end">111<fmt:formatNumber value="111" pattern="#,###" />원</span>
                    </div>	
                  </div>	   
                </div>
              </div>        
            </div> <!-- 주문 상품 끝 -->
          </div> 
	    </div>
      </div>
    </div>
    
    <%@ include file="../shopfooter.jsp" %>
  </div> <!-- wrapper 영역 종료 -->
</body>
</html>