<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<!DOCTYPE html>
<html>
<head>
<title>oHoT Admin</title>
</head>
<body class="sidebar-mini" style="height: auto;">
<div class="wrapper">	
	<!-- 관리자 헤더네비바  -->
	<%@ include file="../adminHeader.jsp"%>
	
	<!-- 관리자 사이드바 -->
	<%@ include file="../adminSidebar.jsp"%>

	<!-- 컨텐츠-->
	<div class="content-wrapper">
		${goodsVO }
		<div class="form-group " style="padding: 30px;">
		<div class="row">
			<div class="col-sm-2" style="text-align: center">
				<div>
					<input type="text" name="pic"  class="form-control" readonly value="담당자">
					</br>
				</div>
				<div id="poster" >
					<img alt="경로확인" src="/upload/${goodsVO.ticketVO.tkFileSaveLocate}" style="width: 100%; height: 350px;" id="posterImg">
				</div>
				<br>
				<button type="button" class="btn btn-success" data-toggle="modal" data-target="#posterModal" id="addPoster" >포스터이미지 수정</button>
			</div>
			<div class="col-sm-7 ">
				<div class=row>
					
					<div class="col-sm-4 btn btn-outline-info ml-2">
						${goodsVO.artGroupNm }			
						${goodsVO.artActNm }				
					</div>
					<div class="col-sm-4 btn btn-outline-primary ml-4">${goodsVO.ticketVO.tkCtgr }</div>
					
					
					<div class="col-sm-12 ">
						<b>공연명</b> <input type="text" id="gdsNm" name="gdsNm" class="form-control" value="${goodsVO.gdsNm }" readonly />
					</div>
					<br/>
					<div class=" col-sm-12">
					 	<b>공연가격</b>
						<div class="row">
						<div class="col-sm-4"><input type="text" id="tkVprice" class="form-control" value="VIP석: ${goodsVO.ticketVO.tkVprice }원" readonly/></div>
						<div class="col-sm-4"><input type="text" id="tkRprice" class="form-control" value="R석: ${goodsVO.ticketVO.tkRprice }원" readonly/></div>
						<div class="col-sm-4"><input type="text" id="tkSprice" class="form-control" value="S석: ${goodsVO.ticketVO.tkSprice }원" readonly /></div>
						</div> 
					</div>
					<br/>
					<div class="col-sm-12">
						공연장소-카카오api <input type="text" id="tkLctn" value="${goodsVO.ticketVO.tkLctn }" readonly class="form-control" />
					</div>
					<div class="col-sm-12" id="ckExplan">
						<b>상품설명</b> <textarea cols="50" rows="10" id="expln" readonly class="form-control" >${goodsVO.expln }</textarea>
						<b>상품설명이미지</b> 
						<c:forEach var="fileDetail" items="${goodsVO.fileGroupVO.fileDetailVOList}">
							<img alt="경로확인" src="/upload/${fileDetail.fileSaveLocate }" style="width: 100%;" id="explnImg">
						</c:forEach>
					</div>
				</div>
			</div>
			
			<div class="col-sm-3">
				<div id="round" >
					<c:forEach var="tkDetailVO" items="${goodsVO.ticketVO.tkDetailVOList }">
						<br/>
						
						
						<div class="btn btn-outline-success">공연날짜: ${tkDetailVO.tkYmd } | ${tkDetailVO.tkRound }시 타임</div>
						<br/>
					</c:forEach>
				</div>
			</div>
		</div>
		<div>
			<button class="btn btn-danger">취소</button>
			<button type="button" class="btn btn-primary" id="saveBtn" >저장</button>
		</div>
	</div>
	</div>

<!-- 관리자 풋터 -->
	<%@ include file="../adminFooter.jsp"%>
	
</div>


</div>
</body>
</html>